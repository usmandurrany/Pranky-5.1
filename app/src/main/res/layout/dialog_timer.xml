<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/popup_small"
        android:scaleType="fitCenter"
        android:padding="10dp"/>
    <ImageView
        android:layout_width="222dp"
        android:layout_height="96dp"
        android:src="@drawable/setstates"
        android:id="@+id/timerset"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/set_btn_margin_bottom"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center_vertical"
        android:id="@+id/linearLayout"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">


        <kankan.wheel.widget.WheelView android:id="@+id/timerhour"
            android:layout_height="100dp"
            android:layout_width="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=":"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_gravity="center_vertical" />
        <kankan.wheel.widget.WheelView android:id="@+id/timerminute"
            android:layout_height="100dp"
            android:layout_width="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=":"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_gravity="center_vertical"/>
        <kankan.wheel.widget.WheelView android:id="@+id/timersec"
            android:layout_height="100dp"
            android:layout_width="40dp"/>

    </LinearLayout>




    <ImageView
        android:layout_marginTop="@dimen/close_btn_margin_top"
        android:layout_marginRight="@dimen/close_btn_margin_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timerclose"
        android:src="@drawable/closestates"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="@dimen/day_hh_mm_ss_margin_top"
        >
        <TextView
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:text="HH"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:shadowColor="#000"
            android:shadowDy="0.3"
            android:shadowDx="1.3"
            android:shadowRadius="6"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="33dp"
            android:layout_height="wrap_content"
            android:text="MM"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:shadowColor="#000"
            android:shadowDy="0.3"
            android:shadowDx="1.3"
            android:shadowRadius="6"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"/>
        <TextView
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:text="SS"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:shadowColor="#000"
            android:shadowDy="0.3"
            android:shadowDx="1.3"
            android:shadowRadius="6"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="3dp"/>


    </LinearLayout>

</RelativeLayout>