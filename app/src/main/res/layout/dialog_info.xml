<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true">

    <include layout="@layout/layout_popup_long" />


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="95dp"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center">

            <com.fournodes.ud.pranky.custom.CustomTextView
                android:id="@+id/lblfrndID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="@string/app_name_spaced"
                android:textAllCaps="true"
                android:textColor="#bf071a"
                android:textIsSelectable="false"
                android:textSize="@dimen/large_20"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/space_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="@string/version"
                android:textAllCaps="true"
                android:textColor="#bf071a"
                android:textIsSelectable="false"
                android:textSize="12sp"
                android:textStyle="bold" />


        </LinearLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/space_large"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:layout_marginBottom="@dimen/space_small">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="@string/copyright"
                    android:autoLink="web"
                    android:textColor="#000"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/medium_18"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:textColorLink="#000" />

                <com.fournodes.ud.pranky.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="@string/sounds_spaced"
                    android:autoLink="web"
                    android:textAllCaps="true"
                    android:textColor="#bf071a"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/large_20"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="@string/sounds_info"
                    android:autoLink="web"
                    android:textColor="#000"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/medium_18"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:textColorLink="#000" />

                <com.fournodes.ud.pranky.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="@string/background_music_spaced"
                    android:autoLink="web"
                    android:textAllCaps="true"
                    android:textColor="#bf071a"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/large_20"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="@string/music_info"
                    android:autoLink="web"
                    android:textColor="#000"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/medium_18"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:textColorLink="#000" />

                <com.fournodes.ud.pranky.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="@string/icon_set_spaced"
                    android:autoLink="web"
                    android:textAllCaps="true"
                    android:textColor="#bf071a"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/large_20"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="@string/icons_info"
                    android:autoLink="web"
                    android:textColor="#000"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/medium_18"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:textColorLink="#000" />

                <com.fournodes.ud.pranky.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="@string/keep_pranking_spaced"
                    android:autoLink="web"
                    android:textColor="#bf071a"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/large_20"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:gravity="center_horizontal" />

                <com.fournodes.ud.pranky.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="@string/thank_you_spaced"
                    android:autoLink="web"
                    android:textColor="#bf071a"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/large_20"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:gravity="center_horizontal" />
            </LinearLayout>

        </ScrollView>
    </LinearLayout>


</RelativeLayout>