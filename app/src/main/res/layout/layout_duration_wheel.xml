<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/lytDuration"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_above="@+id/btnSet"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:layout_marginBottom="@dimen/whl_duration_margin_bottom"
    android:layout_marginTop="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <com.fournodes.ud.pranky.custom.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration  "
        android:textAllCaps="true"
        android:textColor="#bf071a"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/wheel_4"
        android:foregroundGravity="center"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <antistatic.spinnerwheel.WheelHorizontalView
            android:id="@+id/whlDuration"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp" />
    </FrameLayout>


</LinearLayout>
