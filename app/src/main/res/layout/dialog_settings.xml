<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="350dp"
    android:layout_height="350dp"
    android:background="@drawable/popup_body_5">


    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtMusicToggle"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="129dp"
        android:text="Music"
        android:textSize="24sp"
        android:textIsSelectable="false"
        android:padding="5dp" />

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDiagClose"
        android:src="@drawable/closestates"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMusicToggle"
        android:layout_alignTop="@+id/txtMusicToggle"
        android:layout_alignLeft="@+id/btnDiagClose"
        android:layout_alignStart="@+id/btnDiagClose"
        android:layout_marginLeft="-30dp"
        android:background="@drawable/toggle_states"/>


</RelativeLayout>