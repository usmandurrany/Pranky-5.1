<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true">

    <include layout="@layout/layout_popup_small" />

    <include
        layout="@layout/layout_button_set"
        android:layout_width="@dimen/popup_bottom_button_width"
        android:layout_height="90dp"
        android:layout_marginBottom="@dimen/set_btn_margin_bottom"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="95dp"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center">

            <com.fournodes.ud.pranky.custom.CustomTextView
                android:id="@+id/lblfrndID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/friends_id"
                android:textAllCaps="true"
                android:textColor="#bf071a"
                android:textIsSelectable="false"
                android:textSize="@dimen/xlarge_30"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">

                <EditText
                    android:singleLine="true"
                    android:id="@+id/txtfrndID"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:inputType="phone"
                    android:textColor="#000"
                    android:textSize="@dimen/settings_font_small"
                    android:textColorHint="#bdbdbd"
                    android:textStyle="bold"
                    android:hint="e.g.1234"
                    android:maxLength="4" />

                <ImageView
                    android:id="@+id/btnShowContacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/show_contacts" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>