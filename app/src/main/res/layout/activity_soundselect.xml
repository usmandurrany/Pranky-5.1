<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"          android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:background="@drawable/popup_long"
    tools:context="com.fournodes.ud.pranky.SoundSelect">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtSelSound"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="115dp"
        android:textColorHint="#000"
        android:hint="SELECT A SOUND"
        android:enabled="false"
        android:textStyle="italic"
        android:textColor="#000"

        android:gravity="center"/>



    <ImageView
        android:layout_marginTop="16dp"
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDiagClose"
        android:src="@drawable/closestates"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMusicToggle"
        android:src="@mipmap/browse"
        android:layout_alignTop="@+id/txtSelSound"
        android:layout_alignLeft="@+id/btnDiagClose"
        android:layout_alignStart="@+id/btnDiagClose"
        android:layout_marginLeft="-30dp" />



    <ImageView
        android:layout_marginBottom="-11dp"
        android:layout_width="222dp"
        android:layout_height="90dp"
        android:scaleType="fitCenter"
        android:id="@+id/btnSave"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/save_states"
        android:paddingRight="1dp" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView"
        android:layout_below="@+id/btnMusicToggle"
       android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/custom1"
            android:id="@+id/custom1"
            android:onClick="iconClick"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/custom2"
            android:id="@+id/custom2"
            android:onClick="iconClick"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/custom3"
            android:id="@+id/custom3"
            android:onClick="iconClick"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/custom4"
            android:id="@+id/custom4"
            android:onClick="iconClick"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/custom5"
            android:id="@+id/custom5"
            android:onClick="iconClick"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/custom6"
            android:id="@+id/custom6"
            android:onClick="iconClick"/>

    </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pick an icon"
        android:id="@+id/textView"
        android:layout_below="@+id/btnMusicToggle"
       android:textSize="16sp"
       android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:shadowColor="#000"
        android:shadowDy="0.3"
        android:shadowDx="1.3"
        android:shadowRadius="6"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add Custom Sound"
        android:id="@+id/textView2"
        android:layout_below="@+id/btnDiagClose"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:shadowColor="#000"
        android:shadowDy="0.3"
        android:shadowDx="1.3"
        android:shadowRadius="6"
        />
</RelativeLayout>