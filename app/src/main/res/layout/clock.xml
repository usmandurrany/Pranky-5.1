<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="290dp"
    android:background="@drawable/popup_bg"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true">
    <ImageView
        android:layout_width="225dp"
        android:layout_height="100dp"
        android:src="@drawable/setstates"
        android:id="@+id/set"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="208dp"
        android:paddingRight="1dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:id="@+id/linearLayout2">
        <kankan.wheel.widget.WheelView android:id="@+id/day"
            android:layout_height="100dp"
            android:layout_width="85dp"
            android:background="@color/colorPrimary"
            android:layout_marginRight="5dp"/>
        <kankan.wheel.widget.WheelView android:id="@+id/hour"
            android:layout_height="100dp"
            android:layout_width="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=":"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_gravity="center_vertical"/>
        <kankan.wheel.widget.WheelView android:id="@+id/minute"
            android:layout_height="100dp"
            android:layout_width="40dp"/>
        <kankan.wheel.widget.WheelView android:id="@+id/ampm"
            android:layout_height="100dp"
            android:layout_width="50dp"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="60dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/day"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="35dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/hh"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="3dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/mm"
            android:layout_marginRight="65dp"
            android:layout_marginLeft="0dp"/>


    </LinearLayout>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/closestates"
        android:layout_marginLeft="283dp"
        android:layout_marginTop="18dp"
        android:id="@+id/close"/>


</RelativeLayout>